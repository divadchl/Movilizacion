<?xml version="1.0" encoding="utf-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Deteccion.BrandBlock" xmlns:grial="clr-namespace:UXDivers.Grial;assembly=UXDivers.Grial">
    <Grid
        ColumnDefinitions="Auto, Auto"
		ColumnSpacing="10"
		Padding="0"
		Style="{ StaticResource BrandContainerStyle }">
        
        <Image
			Grid.Column="0"
			HeightRequest="64"
			WidthRequest="64"
			Source="{ StaticResource BrandImage }"
			BackgroundColor="{ DynamicResource BrandBlockBackgroundColor }" />

        <StackLayout
			Grid.Column="1"
			Orientation="Vertical"
			HorizontalOptions="Start"
			VerticalOptions="Center"
			Spacing="0">
            
            <Label
				Style="{ StaticResource BrandNameStyle }"
				Text="MyDet"
				VerticalTextAlignment="Start" />
        </StackLayout>
    </Grid>
</ContentView>
